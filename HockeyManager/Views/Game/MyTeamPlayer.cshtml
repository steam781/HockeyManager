@model HockeyManager.Models.Player
@{
    var user = ViewBag.User as HockeyManager.Models.User;
}
<head>

</head>
<div class="Important-message">
    <div class="center-text"><p>@TempData["Message"]</p></div>
</div>
<container>
    <div class="Important-message"><h1>@ViewBag.Meddelande</h1></div>
    <div class="nav-box">@Html.Partial("NavPartial.cshtml")</div>
    <content class="">
        @{
            Random rnd = new Random();
            <div class="width-100 bg-dark-blue">
                <h1>Selected Player</h1>
            </div>
            <div class="width-100 bg-dark-blue">
                <div>
                    <h2>@Model.power</h2>
                </div>
                <div>
                    <h2>Number: @Model.number</h2>
                    <h2>@Model.firstname @Model.lastname</h2>
                    <h2>@Model.role</h2>
                </div>
            </div>
            <form asp-action="PlayerTrain" method="post">
                <div class="width-100 bg-dark-blue">
                    <div>
                        <h2>Basic</h2>
                        <h2>20$</h2>
                    </div>
                    <div>
                        <h2>1-2 Power</h2>
                    </div>
                    <input type="hidden" name="price" value="@Model.price">
                    <input type="hidden" name="cost" value="20">
                    <input type="hidden" name="power" value="@Model.power">
                    <input type="hidden" name="ID" value="@Model.ID">
                    <input type="hidden" name="tempPower" value="@rnd.Next(1, 3)">
                    <button type="submit" value="Buy" class="Action-button">Buy Training</button>
                </div>
            </form>
            <form asp-action="PlayerTrain" method="post">
                <div class="width-100 bg-dark-blue">
                    <div>
                        <h2>Advanced</h2>
                        <h2>50$</h2>
                    </div>
                    <div>
                        <h2>2-5 Power</h2>
                    </div>
                    <input type="hidden" name="price" value="@Model.price">
                    <input type="hidden" name="cost" value="50">
                    <input type="hidden" name="power" value="@Model.power">
                    <input type="hidden" name="ID" value="@Model.ID">
                    <input type="hidden" name="tempPower" value="@rnd.Next(2, 6)">
                    <button type="submit" value="Buy" class="Action-button">Buy Training</button>
                </div>
            </form>
            <form asp-action="PlayerTrain" method="post">
                <div class="width-100 bg-dark-blue">
                    <div>
                        <h2>Elite</h2>
                        <h2>100$</h2>
                    </div>
                    <div>
                        <h2>5-10 Power</h2>
                    </div>
                    <input type="hidden" name="price" value="@Model.price">
                    <input type="hidden" name="cost" value="100">
                    <input type="hidden" name="power" value="@Model.power">
                    <input type="hidden" name="ID" value="@Model.ID">
                    <input type="hidden" name="tempPower" value="@rnd.Next(5, 11)">
                    <button type="submit" value="Buy" class="Action-button">Buy Training</button>
                </div>
            </form>
            <div class="width-100 bg-dark-blue">
                <a asp-area="" asp-controller="Game" asp-action="PlayerTrain">Train player</a>
            </div>
        }
    </content>
</container>
<script src="~/js/inside.js"></script>
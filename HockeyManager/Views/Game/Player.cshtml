@model HockeyManager.Models.TeamPlayers
<head>
    <link rel="stylesheet" type="text/css" href="~/css/Inside.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/inside.js"></script>
</head>
<div class="Important-message">
        <h1>@ViewBag.Message</h1>
    </div>
<container>
    <div class="nav-box">
        @Html.Partial("NavPartial.cshtml")
    </div>
    <content class="split-grid">
        @{
            <div class="left-box">
                <h1 class="size1">@Model.TeamName</h1>
                <label for="role-filter">Filter by Role:</label>
                <select id="role-filter">
                    <option value="">All Roles</option>
                    <option value="C">C</option>
                    <option value="LD">LD</option>
                    <option value="RD">RD</option>
                    <option value="RF">RF</option>
                    <option value="LF">LF</option>
                    <option value="G">G</option>
                </select>
                <table class="Player-table" id="playerTable">
                    <tr class="player-box">
                        <td class="number">Number:</td>
                        <td class="center-text name">Name:</td>
                        <td class="center-text line">|</td>
                        <td class="center-text role">Role:</td>
                        <td class="center-text line">|</td>
                        <td class="center-text power">Pwr:</td>
                    </tr>

                    @foreach (var p in Model.Players)
                    {
                        <tr class="player-box player-click" data-player-id="@p.ID" data-role="@p.role">
                            <td class="center-text number">@p.number</td>
                            <td class="center-text name name-button">@p.firstname @p.lastname</td>
                            <td class="center-text line">|</td>
                            <td class="center-text role">@p.role</td>
                            <td class="center-text line">|</td>
                            <td class="center-text power">@p.power</td
                        </tr>
                    }
                </table>
                <div id="pagination"></div>
            </div>
            <div class="right-box">
                <div id="player-detail" class="player-detail">
                        @if (Model.SelectedPlayer != null)
                        {
                            @Html.Partial("PlayerDetail", Model.SelectedPlayer)
                        }
                        else
                        {
                            <h2>No player selected.</h2>
                        }
                </div>
            </div>
        }
    </content>
</container>
